alias v="mvim -v"

# Git
alias g="git status"
alias gb="git branch"
alias ga="git add ."
alias gc="git commit"
alias gp="git push"
alias gd="git diff"
alias go="git checkout"
alias gt="git tag"
alias gx="gitx ."
alias gl="git log"
# Git log nice
alias gln="git log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short"

